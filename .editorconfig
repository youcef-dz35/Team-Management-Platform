# Team Management Platform - EditorConfig
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Vue files
[*.vue]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass,less}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# PHP (Laravel)
[*.php]
indent_size = 4

# Blade templates
[*.blade.php]
indent_size = 4

# Python
[*.py]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Docker
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# Git
[.git*]
indent_size = 2

# Nginx
[*.conf]
indent_size = 4
